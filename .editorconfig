# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 2

# Tabs in JS unless otherwise specified
[**.js]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[**.less]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
